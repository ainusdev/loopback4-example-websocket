{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "@loopback/build/config/tsconfig.common.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src"],
  "baseUrl": "./", /* Base directory to resolve non-absolute module names. */
  "paths": {
    // Top level alias
    "@core": [
      "src/core"
    ],
    "@decorators": [
      "src/decorators"
    ],
    "@controllers": [
      "src/controllers"
    ],
  }
}
